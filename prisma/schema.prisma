// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique // For subdomain or path (e.g., "johns-cafe")
  email         String   // Owner email to receive feedback

  // Business Links
  websiteUrl    String?  // Business website URL
  facebookUrl   String?  // Facebook page URL
  instagramUrl  String?  // Instagram profile URL
  linkedinUrl   String?  // LinkedIn profile URL
  logoUrl       String?  // Logo file path (businessname_logo.jpg/png)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Review platforms with weighting
  platforms     ReviewPlatform[]
  feedbacks     Feedback[]
  stats         Stat[]

  // Tracking for round-robin distribution
  lastPlatformIndex Int @default(0)
}

model ReviewPlatform {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  name        String   // e.g., "Google", "Trust Pilot", "Other"
  url         String   // The review URL
  weight      Int      @default(100) // Percentage weight (0-100)
  order       Int      @default(0)   // Display order

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([businessId])
}

model Feedback {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  // Customer information
  name        String
  email       String
  phone       String?  // Optional phone number
  message     String   @db.Text
  rating      String   // "neutral" or "sad"
  stars       Int      // 1-5 star rating
  wantsContact Boolean @default(false) // Whether customer wants to be contacted

  // Metadata
  createdAt   DateTime @default(now())
  read        Boolean  @default(false)

  @@index([businessId])
  @@index([createdAt])
}

model Stat {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  // Event type: "happy", "neutral", "sad", "redirect_platform1", "redirect_platform2", "redirect_platform3", "bounce"
  eventType   String

  // Platform redirect tracking (if eventType starts with "redirect_")
  platformName String?

  createdAt   DateTime @default(now())

  @@index([businessId])
  @@index([eventType])
  @@index([createdAt])
}
