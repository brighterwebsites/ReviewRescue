// This is your Prisma schema file

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  BUSINESS_OWNER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String    // Hashed password
  name          String
  role          UserRole  @default(BUSINESS_OWNER)
  emailVerified DateTime? // Email verification timestamp
  maxBusinesses Int       @default(3) // Max number of businesses (unlimited for admin)

  businesses    Business[]
  accounts      Account[]
  sessions      Session[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Business {
  id            String   @id @default(cuid())
  userId        String   // Owner of this business
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  name          String
  slug          String   @unique // For subdomain or path (e.g., "johns-cafe")
  email         String   // Owner email to receive feedback

  // Business Links
  websiteUrl    String?  // Business website URL
  facebookUrl   String?  // Facebook page URL
  instagramUrl  String?  // Instagram profile URL
  linkedinUrl   String?  // LinkedIn profile URL
  logoUrl       String?  // Logo file path (businessname_logo.jpg/png)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Review platforms with weighting
  platforms     ReviewPlatform[]
  feedbacks     Feedback[]
  stats         Stat[]

  // Tracking for round-robin distribution
  lastPlatformIndex Int @default(0)

  @@index([userId])
}

model ReviewPlatform {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  name        String   // e.g., "Google", "Trust Pilot", "Other"
  url         String   // The review URL
  weight      Int      @default(100) // Percentage weight (0-100)
  order       Int      @default(0)   // Display order

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([businessId])
}

model Feedback {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  // Customer information
  name        String
  email       String
  phone       String?  // Optional phone number
  message     String   @db.Text
  rating      String   // "neutral" or "sad"
  stars       Int      // 1-5 star rating
  wantsContact Boolean @default(false) // Whether customer wants to be contacted

  // Metadata
  createdAt   DateTime @default(now())
  read        Boolean  @default(false)

  @@index([businessId])
  @@index([createdAt])
}

model Stat {
  id          String   @id @default(cuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  // Event type: "happy", "neutral", "sad", "redirect_platform1", "redirect_platform2", "redirect_platform3", "bounce"
  eventType   String

  // Platform redirect tracking (if eventType starts with "redirect_")
  platformName String?

  createdAt   DateTime @default(now())

  @@index([businessId])
  @@index([eventType])
  @@index([createdAt])
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
